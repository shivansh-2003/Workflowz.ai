# For local PostgreSQL (development)
# Example:
#   CREATE USER workflowz_user WITH PASSWORD 'password';
#   CREATE DATABASE workflowz OWNER workflowz_user;
#
# DATABASE_URL=postgresql+asyncpg://workflowz_user:password@localhost:5432/workflowz

# For Supabase PostgreSQL (comment out local, uncomment this and fill values)
# Get these from Supabase → Settings → Database → Connection string
# Example:
#   postgresql://postgres:YOUR_SUPABASE_PASS@db.xxxxx.supabase.co:5432/postgres
# becomes:
#   postgresql+asyncpg://postgres:YOUR_SUPABASE_PASS@db.xxxxx.supabase.co:5432/postgres
#
# DATABASE_URL=postgresql+asyncpg://postgres:YOUR_SUPABASE_PASS@db.xxxxx.supabase.co:5432/postgres

# Active DATABASE_URL (uncomment ONE of the above and comment this placeholder)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/workflowz

# JWT / security
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
